{
    "compilerOptions": {
        "target"                      : "es2018",
        "module"                      : "esnext",
        "moduleResolution"            : "node",
        "noEmitOnError"               : true,
        "lib"                         : ["es2017", "dom"],
        "strict"                      : true,
        "esModuleInterop"             : false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators"      : true,
        "importHelpers"               : true,
        "outDir"                      : "dist",
        "sourceMap"                   : true,
        "inlineSources"               : true,
        "rootDir"                     : "./",
        "allowJs"                     : true,
        "noImplicitAny"               : false,
        "declaration"                 : true,
        "declarationMap"              : true,
        "emitDecoratorMetadata"       : true,
        "noImplicitThis": false,
        "plugins"                     : [
            {
                "name"  : "ts-lit-plugin",
                "strict": true
            }
        ]
    },
    "include"        : ["**/*.ts"]
}
