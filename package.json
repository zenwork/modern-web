{
    "name": "modern-lib-or-app",
    "version": "0.0.1",
    "description": "My lib or app",
    "main": "src/index.ts",
    "module": "src/index.ts",
    "scripts": {
        "start": "web-dev-server --open assets/index.html --node-resolve",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "tsc": "tsc",
        "test": "web-test-runner **/*.test.ts --node-resolve --watch --coverage",
        "prepare": "npm run lint && npm run build:test && npm run build:bundle",
        "bundle": "rollup -c rollup.config.js",
        "docs": "es-dev-server .",
        "build:clean": "rm -rf ./.coverage ./dist ./reports ./exports ./results",
        "build:wcspec": "wca --format json --outDir dist src/**/*.ts",
        "build:test": "web-test-runner **/*.test.ts --node-resolve --coverage --playwright --browsers chromium firefox webkit",
        "build:bundle": "npm run build:clean && rollup -c rollup.config.js --environment BUILD:production && npm run build:wcspec",
        "watch:bundle": "rollup -c rollup.config.js --watch",
        "watch:start": "web-dev-server --open assets/index.html --node-resolve --watch",
        "watch:test": "web-test-runner **/*.test.ts --node-resolve --watch --coverage"
    },
    "license": "MIT",
    "dependencies": {
        "lit-element": "^2.4.0",
        "lit-html": "^1.3.0"
    },
    "devDependencies": {
        "@mdjs/core": "^0.4.1",
        "@open-wc/rollup-plugin-html": "^1.2.5",
        "@open-wc/testing": "^2.5.32",
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-image": "^2.0.5",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^8.0.4",
        "@types/node": "^14.14.7",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "@web/dev-server": "^0.0.21",
        "@web/dev-server-esbuild": "^0.2.6",
        "@web/dev-server-import-maps": "0.0.3",
        "@web/dev-server-rollup": "^0.2.11",
        "@web/test-runner": "^0.9.11",
        "@web/test-runner-cli": "^0.6.12",
        "@web/test-runner-junit-reporter": "^0.2.1",
        "@web/test-runner-playwright": "^0.6.6",
        "es-dev-server": "^1.58.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-html": "^6.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-lit": "^1.2.4",
        "eslint-plugin-lit-a11y": "^1.0.1",
        "rollup": "^2.33.2",
        "rollup-plugin-analyzer": "^3.3.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-filesize": "^9.0.2",
        "rollup-plugin-lit-css": "^2.1.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-styles": "^3.11.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript": "^1.0.1",
        "rollup-plugin-visualizer": "^4.2.0",
        "ts-lit-plugin": "^1.2.1",
        "ts-mocha": "^8.0.0",
        "tslib": "^2.0.3",
        "typescript": "^4.0.5",
        "watch": "^1.0.2",
        "web-component-analyzer": "^1.1.6"
    }
}
